{{#demo-css}}
<h1>{{ui-pill 'mini-datetime'}}</h1>
<desc>A lightweight component for displaying both date and time in a relatively small screen real estate.</desc>


<h3>Demo</h3>
<div class="col-xs-12">

  <div class="col-xs-12 col-lg-5">
    {{mini-datetime
      value=start
      duration=duration
      numDateChoices=numDateChoices
      durationChoices=durationChoices
      editable=editable
      ampm=ampm
      showDuration=showDuration
      disabled=disabled
      onChange=(mut start)
      onDurationChange=(mut duration)
    }}
  </div>
  <div class="col-xs-7 col-lg-4">
    {{display-component componentName='mini-datetime'
      start=start
      duration=duration
      durationChoices=durationChoices
      disabled=disabled
      editable=editable
      showDuration=showDuration
      ampm=ampm
      numDateChoices=numDateChoices
      onChange=(mut start)
      onDurationChange=(mut onDurationChange)
    }}
  </div>
  <div class="col-xs-5 col-lg-3">
    Disabling<br/>
    {{ui-toggle-button off='enabled' on='disabled' value=disabled onToggle=(mut disabled)}}<br/>
    Editable<br/>
    {{ui-toggle-button off='no' on='yes' value=editable defaultValue=true onToggle=(mut editable)}}<br/>
    # of Date Choices<br/>
    {{ui-buttons
      name='number-of-date-choices'
      buttons='4:::4,5:::5,7:::7,auto'
      value=numDateChoices
      onChange=(mut numDateChoices)
      cardinality='1:1'
    }}
    <br/>
    AM/PM:<br/>
    {{ui-toggle-button
      on=true
      off=false
      onTitle='true'
      offTitle='false'
      value=ampm
      onToggle=(mut ampm)
    }}
    <br/>
    Show Duration:<br/>
    {{ui-toggle-button
      on=true
      off=false
      onTitle='true'
      offTitle='false'
      value=showDuration
      onToggle=(mut showDuration)
    }}

  </div>
</div>


{{/demo-css}}
